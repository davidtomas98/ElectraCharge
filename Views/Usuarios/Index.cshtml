@model List<ElectraCharge.Models.Usuario>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Usuario</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="text-center mt-5 mb-4">Alta de Usuario</h1>

        <!-- Formulario de registro -->
        <div class="row justify-content-center">
            <div class="col-md-6">
                @using (Html.BeginForm("Registrar", "Usuarios", FormMethod.Post))
                {
                    <div class="mb-3">
                        <label for="Nombre" class="form-label">Nombre</label>
                        <input type="text" id="Nombre" name="Nombre" class="form-control" required />
                        <span class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="Apellido1" class="form-label">Apellido 1</label>
                        <input type="text" id="Apellido1" name="Apellido1" class="form-control" required />
                        <span class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="Apellido2" class="form-label">Apellido 2</label>
                        <input type="text" id="Apellido2" name="Apellido2" class="form-control" required />
                        <span class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="CorreoElectronico" class="form-label">Correo Electrónico</label>
                        <input type="email" id="CorreoElectronico" name="CorreoElectronico" class="form-control" required />
                        <span class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Registrarse</button>
                }
            </div>
        </div>

            <!-- lista de usuarios-->
        <h1 class="text-center mt-5 mb-4">Lista de Usuarios</h1>

        <div class="row mb-3">
            <!-- Filtros de búsqueda -->
            <div class="col-md-6">
                <select class="form-control" id="filtro">
                    <option value="nombre">Nombre</option>
                    <option value="apellido1">Apellido 1</option>
                    <option value="correoelectronico">Correo Electronico</option>
                </select>
            </div>
            <div class="col-md-6">
                <input type="text" class="form-control" placeholder="Buscar" id="txtBusqueda">
            </div>
        </div>
        <!-- Tabla de usuarios -->
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido 1</th>
                        <th scope="col">Apellido 2</th>
                        <th scope="col">Correo Electrónico</th>
                        <th scope="col">Acciones</th> 
                    </tr>
                </thead>
                <tbody id="tablaUsuarios">
                    <!-- Iteración sobre cada usuario en el modelo -->
                    @foreach (var usuario in ViewBag.Usuarios)
                    {
                        <tr>
                            <td>@usuario.Nombre</td>
                            <td>@usuario.Apellido1</td>
                            <td>@usuario.Apellido2</td>
                            <td>@usuario.CorreoElectronico</td>
                            <td>
                                <!-- Acciones para editar y eliminar el usuario -->
                                <a href="@Url.Action("Editar", "Usuarios", new { id = usuario.Id })" class="btn btn-outline-primary"><i class="bi bi-pencil-fill"></i></a>
                                <a href="@Url.Action("Eliminar", "Usuarios", new { id = usuario.Id })" class="btn btn-outline-danger"><i class="bi bi-trash-fill"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Verificar si hay más de 8 usuarios para mostrar los botones de paginación -->
        @if (ViewBag.TotalPaginas > 1)
        {
            <div class="text-center">
                <!-- Botón para ir a la página anterior -->
                @if (ViewBag.PaginaActual > 1)
                {
                    <a href="@Url.Action("Index", "Usuarios", new { pagina = ViewBag.PaginaActual - 1 })" class="btn btn-primary mr-2"><i class="bi bi-chevron-left"></i> Página anterior</a>
                }

                <!-- Botón para ir a la página siguiente -->
                @if (ViewBag.PaginaActual < ViewBag.TotalPaginas)
                {
                    <a href="@Url.Action("Index", "Usuarios", new { pagina = ViewBag.PaginaActual + 1 })" class="btn btn-primary"><i class="bi bi-chevron-right"></i> Página siguiente</a>
                }
            </div>
        }
    </div>

    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/filterUsuario.js" asp-append-version="true"></script>
</body>
</html>
