@model List<ElectraCharge.Models.Usuario>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro de Usuario</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .container {
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mt-5 mb-4">Alta de Usuario</h1>

        <!-- Formulario de registro -->
        <div class="row justify-content-center">
            <div class="col-md-6">
                @using (Html.BeginForm("Registrar", "Usuarios", FormMethod.Post))
                {
                    <div class="mb-3">
                        <label for="Nombre" class="form-label">Nombre</label>
                        <input type="text" id="Nombre" name="Nombre" class="form-control" required />
                        <span class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="Apellido1" class="form-label">Apellido 1</label>
                        <input type="text" id="Apellido1" name="Apellido1" class="form-control" required />
                        <span class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="Apellido2" class="form-label">Apellido 2</label>
                        <input type="text" id="Apellido2" name="Apellido2" class="form-control" required />
                        <span class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="CorreoElectronico" class="form-label">Correo Electrónico</label>
                        <input type="email" id="CorreoElectronico" name="CorreoElectronico" class="form-control" required />
                        <span class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Registrarse</button>
                }
            </div>
        </div>

        <!-- Lista de usuarios -->
        <div class="row justify-content-center mt-5">
            <div class="col-md-8">
                <h2 class="text-center">Lista de Usuarios</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido 1</th>
                            <th>Apellido 2</th>
                            <th>Correo Electrónico</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in Model)
                        {
                            <tr>
                                <td>@usuario.Nombre</td>
                                <td>@usuario.Apellido1</td>
                                <td>@usuario.Apellido2</td>
                                <td>@usuario.CorreoElectronico</td>
                                <td>
                                    <a href="@Url.Action("Editar", "Usuarios", new { id = usuario.Id })" class="btn btn-outline-primary"><i class="bi bi-pencil-fill"></i></a>
                                    <a href="@Url.Action("Eliminar", "Usuarios", new { id = usuario.Id })" class="btn btn-outline-danger"><i class="bi bi-trash-fill"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
