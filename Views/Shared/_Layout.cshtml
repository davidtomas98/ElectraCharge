<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Configuración del metadato -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Título de la página -->
    <title>@ViewData["Title"] - ElectraCharge</title>
    <!-- Estilos CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ElectraCharge.styles.css" asp-append-version="true" />
    <!-- Agregar FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-***********" crossorigin="anonymous" />
</head>
<body>
    <!-- Encabezado de la página -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <!-- Logo y enlace a la página principal -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ElectraCharge</a>
                <!-- Botón para el menú desplegable en dispositivos móviles -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <!-- Menú de navegación -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Cargadores" asp-action="Index">Cargadores</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Usuarios" asp-action="Index">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Registrar" asp-action="Index">Asignar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <!-- Menú de usuario -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-flex">
                                    <button type="submit" class="btn btn-link nav-link">
                                        <i class="fas fa-sign-out-alt"></i> Logout
                                    </button>
                                </form>
                            }
                            else
                            {
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-user"></i> Login
                                </a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- Contenido principal -->
    <div class="container">
        <main role="main" class="pb-3">
            <!-- Renderizar el contenido de las páginas -->
            @RenderBody()
        </main>
    </div>
    <!-- Pie de página -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ElectraCharge - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <!-- Scripts JavaScript -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Sección para los scripts específicos de cada página -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
