@model ElectraCharge.Models.Asignar

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Asignar Cargador a Usuario</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mt-5">Asignar Cargador a Usuario</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label asp-for="IdUsuario" class="control-label">Usuario</label>
                    <select asp-for="IdUsuario" class="form-control">
                        <option value="">Seleccione un usuario</option>
                        @if (Model.Usuarios != null)
                        {
                            foreach (var usuario in Model.Usuarios)
                            {
                                <option value="@usuario.Id">@usuario.Nombre</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="IdUsuario" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdCargador" class="control-label">Cargador</label>
                    <select asp-for="IdCargador" class="form-control">
                        <option value="">Seleccione un cargador</option>
                        @if (Model.Cargadores != null)
                        {
                            foreach (var cargador in Model.Cargadores)
                            {
                                <option value="@cargador.Id">@cargador.Marca</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="IdCargador" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            }
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
