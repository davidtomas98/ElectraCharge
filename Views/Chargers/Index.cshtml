@model List<ElectraCharge.Models.Charger>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Cargadores Eléctricos</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    
    <!-- Estilos personalizados -->
    <style>
        .light-green, .light-red{
            width: 20px;
            height: 20px;
            display: inline-block; 
            border-radius: 50%; 
            margin-left:10px;
        }
        .light-green {
            background-color: #4CAF50;
        }

        .light-red {
            background-color: #ff1100;
        }
    </style>
</head>
<body>

 <!-- Formulario para dar de alta un cargador -->
    <div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="text-center mt-5">Alta de Cargador</h2>
        <!-- Formulario de alta de cargador -->
        @using (Html.BeginForm("Registrar", "Chargers", FormMethod.Post))
        {
            <div class="form-group">
                <label for="marca">Marca</label>
                <input type="text" class="form-control" id="marca" name="Marca" required>
            </div>
            <div class="form-group">
                <label for="potencia">Potencia (kW)</label>
                <input type="number" class="form-control" id="potencia" name="Potencia" required>
            </div>
            <div class="form-group">
                <label for="ubicacion">Ubicación</label>
                <input type="text" class="form-control" id="ubicacion" name="Ubicacion" required>
            </div>
            <button type="submit" class="btn btn-primary">Registrar</button>
        }
    </div>

<!-- Título de la lista de cargadores -->
<h1 class="text-center mt-5 mb-4">Lista de Cargadores Eléctricos</h1>

<div class="container">
    <div class="row mb-3">
        <!-- Filtros de búsqueda -->
        <div class="col-md-6">
            <select class="form-control" id="filtro">
                <option value="marca">Marca</option>
                <option value="potencia">Potencia (kW)</option>
                <option value="ubicacion">Ubicación</option>
            </select>
        </div>
        <div class="col-md-6">
            <input type="text" class="form-control" placeholder="Buscar" id="txtBusqueda">
        </div>
    </div>
    <!-- Tabla de cargadores -->
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Marca</th>
                    <th scope="col">Potencia (kW)</th>
                    <th scope="col">Ubicación</th>
                    <th scope="col">Estado</th>
                    <th scope="col">Acciones</th> 
                </tr>
            </thead>
            <tbody id="tablaCargadores">
                <!-- Iteración sobre cada cargador en el modelo -->
                @foreach (var charger in Model)
                {
                    <tr>
                        <td>@charger.Id</td>
                        <td>@charger.Marca</td>
                        <td>@charger.Potencia</td>
                        <td>@charger.Ubicacion</td>
                        <td>
                            <!-- Etiqueta que muestra el estado del cargador -->
                            @if(charger.Estado == "disponible")
                            {
                                <span class="badge rounded-pill bg-success">Disponible</span>
                            }
                            else
                            {
                                <span class="badge rounded-pill bg-danger">No disponible</span>
                            }
                        </td>
                        <td>
                            <!-- Acciones para editar y eliminar el cargador -->
                            <a href="@Url.Action("Editar", "Chargers", new { id = charger.Id })" class="btn btn-outline-primary"><i class="bi bi-pencil-fill"></i></a>
                            <a href="@Url.Action("Eliminar", "Chargers", new { id = charger.Id })" class="btn btn-outline-danger"><i class="bi bi-trash-fill"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Inclusión de scripts al final del cuerpo del documento -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<!-- Script para filtrar los cargadores -->
@section scripts {
    <script>
        $(document).ready(function () {
            $('#txtBusqueda').on('keyup', function () {
                filtrarTabla();
            });

            $('#filtro').on('change', function () {
                filtrarTabla();
            });

            function filtrarTabla() {
                var filtro = $('#filtro').val();
                var valor = $('#txtBusqueda').val().toLowerCase();

                $('#tablaCargadores tr').filter(function () {
                    var columna = $(this).find('td').eq(filtro === 'potencia' ? 2 : 1).text().toLowerCase();
                    $(this).toggle(columna.indexOf(valor) > -1);
                });
            }
        });
    </script>
}
</body>
</html>
